{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true, // 是否禁止隐式的any类型，默认：false
    "removeComments": true, // 是否删除注释
    "preserveConstEnums": true, // 是否禁止删除枚举常量生成代码中的声明，默认：false。
    "sourceMap": false, // 是否生成 map文件
    "outDir": "dist", // 指定输出目录
    "declaration": false, // 开启后会自动生成声明文件 生成 *.d.ts文件
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}